@using Duende.IdentityServer.Extensions
@using Microsoft.AspNetCore.Identity

@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

@if (!string.IsNullOrWhiteSpace(name))
{
    <a id="manage" class="nav-link" asp-page="/Diagnostics/Index" title="Manage">@name</a>
    <div class="eq">*</div>
    <form id="logoutForm" class="form-inline" asp-page="/Account/Logout/Index" asp-route-returnUrl="@Url.Page("/Index", new {area = ""})">
        <button
            id="logout"
            type="submit"
            class="nav-link btn btn-link border-0">
            ABMELDEN
        </button>
    </form>
}
else
{
    <a class="nav-link" id="register" asp-page="/Account/Create/Index">REGISTRIEREN</a>
    <div class="eq">*</div>
    <a class="nav-link" id="login" asp-page="/Account/Login/Index">ANMELDEN</a>
}