@page
@model LoginModel

@{
    ViewData["Title"] = "Anmelden";
}

<h1 class="title text-center mb-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-8 container">
        <section>
            <form id="account" method="post">
                <h2 class="text-center">** VERWENDE EIN LOKALES KONTO ZUR ANMELDUNG **</h2>
            <hr style="border-top: .5rem #726ed4 dashed "/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Email" style="color: #726ed4;font-family: 'Share Tech Mono';background: transparent; border-color: #726ed4" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email"style="color: #726ed4;font-family: 'Share Tech Mono'">E-MAIL</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
            <div class="form-floating mb-3" style="background: transparent">
                <input asp-for="Input.Password" style="color: #726ed4;font-family: 'Share Tech Mono' ;background: transparent; border-color: #726ed4"  class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" style="color: #726ed4;font-family: 'Share Tech Mono'">PASSWORT</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary" style="color: #726ed4;font-family: 'Share Tech Mono';">ANMELDEN</button>
                </div>
                <div class="mt-3" style="display: flex; justify-content: space-between">
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                    <div>
                        <a id="forgot-password" asp-page="./ForgotPassword">PASSWORT VERGESSEN?</a>
                    </div>
                    <div>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">NEU REGISTRIEREN</a>
                    </div>
                    <div>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-MAIL-BESTÄTIGUNG ERNEUT SENDEN</a>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
