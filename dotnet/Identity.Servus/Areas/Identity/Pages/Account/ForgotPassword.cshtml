@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Passwort vergessen?";
}

<h1 class="title text-center mb-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-10 container">
        <section>
            <form method="post">
                <h2 class="text-center">** E-MAIL EINGEBEN **</h2>
                <hr style="border-top: .5rem #726ed4 dashed "/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" style="color: #726ed4;font-family: 'Share Tech Mono';background: transparent; border-color: #726ed4" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                    <label asp-for="Input.Email"style="color: #726ed4;font-family: 'Share Tech Mono'">E-MAIL</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button id="submit" type="submit" class="w-100 btn btn-lg btn-outline-primary" style="color: #726ed4;font-family: 'Share Tech Mono';">PASSWORT ZURÜCKSETZEN</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}