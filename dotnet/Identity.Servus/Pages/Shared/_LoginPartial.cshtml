@using Microsoft.AspNetCore.Identity
@using Identity.Servus

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
  <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">SERVUS @UserManager.GetUserName(User)!</a>
  <div class="eq">|</div>
  <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new {area = ""})">
    <button
    id="logout"
    type="submit"
    class="nav-link btn btn-link border-0">ABMELDEN</button>
  </form>
}
else
{
  <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">REGISTRIEREN</a>
  <div class="eq">|</div>
  <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">ANMELDEN</a>
}
